{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": { "type": "string", "defaultValue": "eastus" },
    "appServicePlanName": { "type": "string", "defaultValue": "avcAppPlan" },
    "webAppName": { "type": "string", "defaultValue": "avcwebapp" },
    "signalRName": { "type": "string", "defaultValue": "avcsignalr" },
    "functionAppName": { "type": "string", "defaultValue": "avcfuncapp" },
    "containerEnvName": { "type": "string", "defaultValue": "avccontainenv" },
    "avatarAppName": { "type": "string", "defaultValue": "avcavatar" },
    "visemeAppName": { "type": "string", "defaultValue": "avcviseme" },
    "appInsightsName": { "type": "string", "defaultValue": "avcinsights" }
  },
  "variables": {
    "storageAccountName": "[substring(toLower(concat('avcst', uniqueString(resourceGroup().id))), 0, 24)]",
    "functionStorageName": "[substring(toLower(concat('avcfs', uniqueString(resourceGroup().id))), 0, 24)]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-03-01",
      "name": "[parameters('appServicePlanName')]",
      "location": "[parameters('location')]",
      "sku": { "name": "F1", "tier": "Free" },
      "properties": {}
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "[parameters('webAppName')]",
      "location": "[parameters('location')]",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "[variables('storageAccountName')]",
      "location": "[parameters('location')]",
      "sku": { "name": "Standard_LRS" },
      "kind": "StorageV2"
    },
    {
      "type": "Microsoft.SignalRService/signalR",
      "apiVersion": "2023-02-01",
      "name": "[parameters('signalRName')]",
      "location": "[parameters('location')]",
      "sku": { "name": "Free_F1", "tier": "Free", "capacity": 1 },
      "properties": {
        "features": [
          { "flag": "ServiceMode", "value": "Default" }
        ]
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "[variables('functionStorageName')]",
      "location": "[parameters('location')]",
      "sku": { "name": "Standard_LRS" },
      "kind": "StorageV2"
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "[parameters('functionAppName')]",
      "location": "[parameters('location')]",
      "kind": "functionapp",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "siteConfig": {
          "appSettings": [
            {
              "name": "AzureWebJobsStorage",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('functionStorageName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('functionStorageName')), '2023-01-01').keys[0].value)]"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.App/managedEnvironments",
      "apiVersion": "2024-03-01",
      "name": "[parameters('containerEnvName')]",
      "location": "[parameters('location')]",
      "properties": {}
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2024-03-01",
      "name": "[parameters('avatarAppName')]",
      "location": "[parameters('location')]",
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', parameters('containerEnvName'))]",
        "configuration": { "ingress": { "external": true, "targetPort": 80 } },
        "template": {
          "containers": [
            {
              "name": "avatar",
              "image": "mcr.microsoft.com/azuredocs/containerapps-helloworld:latest",
              "resources": { "cpu": 0.5, "memory": "1Gi" }
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2024-03-01",
      "name": "[parameters('visemeAppName')]",
      "location": "[parameters('location')]",
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', parameters('containerEnvName'))]",
        "configuration": { "ingress": { "external": true, "targetPort": 80 } },
        "template": {
          "containers": [
            {
              "name": "viseme",
              "image": "mcr.microsoft.com/azuredocs/containerapps-helloworld:latest",
              "resources": { "cpu": 0.5, "memory": "1Gi" }
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Insights/components",
      "apiVersion": "2020-02-02",
      "name": "[parameters('appInsightsName')]",
      "location": "[parameters('location')]",
      "kind": "web",
      "properties": { "Application_Type": "web" }
    }
  ],
  "outputs": {
    "webAppUrl": {
      "type": "string",
      "value": "[concat('https://', parameters('webAppName'), '.azurewebsites.net')]"
    },
    "functionAppUrl": {
      "type": "string",
      "value": "[concat('https://', parameters('functionAppName'), '.azurewebsites.net')]"
    },
    "signalRConnectionString": {
      "type": "string",
      "value": "[listKeys(resourceId('Microsoft.SignalRService/signalR', parameters('signalRName')), '2023-02-01').primaryConnectionString]"
    },
    "avatarAppUrl": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.App/containerApps', parameters('avatarAppName'))).properties.configuration.ingress.fqdn]"
    },
    "visemeAppUrl": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.App/containerApps', parameters('visemeAppName'))).properties.configuration.ingress.fqdn]"
    },
    "appInsightsInstrumentationKey": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Insights/components', parameters('appInsightsName')), '2020-02-02').InstrumentationKey]"
    }
  }
}
