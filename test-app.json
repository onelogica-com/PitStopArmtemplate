{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "EastUS2",
      "metadata": { "description": "Location for all resources" }
    },
    "prefix": {
      "type": "string",
      "defaultValue": "avc",
      "metadata": { "description": "Prefix for resource names" }
    },
    "repositoryUrl": {
      "type": "string",
      "defaultValue": "https://github.com/yourorg/your-frontend-repo",
      "metadata": { "description": "GitHub repo URL for the static web app" }
    },
    "branch": {
      "type": "string",
      "defaultValue": "main",
      "metadata": { "description": "Branch to deploy" }
    }
  },
  "variables": {
    "storageAccountName": "[toLower(concat(parameters('prefix'), 'st', uniqueString(resourceGroup().id)))]",
    "staticWebAppName": "[concat(parameters('prefix'), '-swa')]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2021-09-01",
      "name": "[variables('storageAccountName')]",
      "location": "[parameters('location')]",
      "sku": { "name": "Standard_LRS" },
      "kind": "StorageV2",
      "properties": { "accessTier": "Hot" }
    },
    {
      "type": "Microsoft.Web/staticSites",
      "apiVersion": "2022-03-01",
      "name": "[variables('staticWebAppName')]",
      "location": "[parameters('location')]",
      "properties": {
        "repositoryUrl": "[parameters('repositoryUrl')]",
        "branch": "[parameters('branch')]",
        "buildProperties": {
          "appLocation": "/",
          "apiLocation": "api",
          "outputLocation": "build"
        },
        "sku": { "name": "Free" }
      }
    }
  ],
  "outputs": {
    "staticWebAppUrl": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Web/staticSites', variables('staticWebAppName'))).defaultHostName]"
    },
    "storageAccountName": {
      "type": "string",
      "value": "[variables('storageAccountName')]"
    }
  }
}
